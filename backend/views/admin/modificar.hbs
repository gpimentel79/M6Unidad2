<div class="container" style="margin-top: 40px;">
  <h3>Modificar producto</h3>
  <form action="/admin/novedades/modificar" method="post">
    <input type="hidden" name="id" value={{novedad.id}} />
    <div class="mb-3">
      <label for="titulo" class="form-label">Producto</label>
      <input
        type="text"
        class="form-control"
        id="titulo"
        name="titulo"
        aria-describedby="Producto nuevo"
        value={{novedad.titulo}}
      />
      <div id="titulo" class="form-text">Nueva cerveza en stock.</div>
    </div>
    <div class="mb-3">
      <label for="abreviatura" class="form-label">Abrev.</label>
      <input
        type="text"
        class="form-control"
        id="abrev"
        name="subtitulo"
        value={{novedad.subtitulo}}
      />
    </div>
    <div class="form-group">
      <label for="descripcion">Descripci√≥n</label>
      <textarea
        class="form-control"
        id="cuerpo"
        name="cuerpo"
        rows="3"
      >{{novedad.cuerpo}}</textarea>
    </div>
    <div class="text-right">
      <a class="btn btn-primary" href="/admin/novedades">
        Cancelar

      </a>
      <button type="submit" class="btn btn-success">Guardar</button>
    </div>
  </form>
  {{#if error}}
    <div class="alert alert-danger" style="margin-top:15px;" role="alert">
      {{message}}
    </div>

  {{/if}}
</div>